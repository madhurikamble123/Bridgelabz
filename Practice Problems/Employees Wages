package com.bridelabzPractice;

public class Attendence {
    //static int perHourSalary=20;
    //int workinHour = 8;
    public static void main(String[] args) {
        int perHourSalary=20;
        //int workinHour = 8;
        //int workinHour = 0;
        double a = Math.random() * 3;
        //int day =1;


        // Output is different every time this code is executed
        System.out.println(a);
        if (a<=1){
            int fulldayHour=0;
            System.out.println("Employee is absent");
            System.out.println("Employee working day salary is:" +perHourSalary* fulldayHour);

        }
        else if (a<=2) {
            int fulldayHour=8;
            System.out.println("Employee is prsent");
            System.out.println("Employee working day salary is:" +perHourSalary* fulldayHour);
        }
        else {
            int partTimeHour=8;
            System.out.println("Employee is part time job");
            System.out.println("Employee working day salary is:" +perHourSalary* partTimeHour);
        }

    }

}
